@model Task2Referencial.Models.UserAuth
@{
    ViewBag.Title = "LoginForm";
    Layout = "~/Views/Shared/View1.cshtml";

}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="card">
        <div class="card-header">
            <h2>LoginForm</h2>
        </div>
    </div>

    <div class="card-body">
        <div class="form-group">
            @Html.LabelFor(n => n.UserName)
            @Html.TextBoxFor(n => n.UserName, new { @class = "form-control" })
            @Html.ValidationMessageFor(n => n.UserName)
        </div>
        <div class="form-group">
            @Html.LabelFor(n => n.UserRole)
            @Html.TextBoxFor(n => n.UserRole, new { @class = "form-control" })
            @Html.ValidationMessageFor(n => n.UserRole)
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success rounded-1">Submit</button>
              @Html.ActionLink("New User", "RegisterForm")
        </div>
    </div>

}